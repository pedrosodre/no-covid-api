{
    "name": "covid-19-no-covid-api",
    "version": "1.0.0",
    "description": "",
    "author": "Pedro Sodr√© <pedro@pedrosodre.dev>",
    "private": true,
    "license": "GPL-3.0",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "export NODE_ENV=development && nest build --webpack --webpackPath webpack-hmr.config.js",
        "start:debug": "export NODE_ENV=development && nest start --debug --watch",
        "start:prod": "export NODE_ENV=production && node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/e2e/jest-e2e.json --forceExit"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/config": "^0.4.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/jwt": "^7.0.0",
        "@nestjs/platform-express": "^7.0.7",
        "@nestjs/swagger": "^4.5.1",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.1",
        "elastic-apm-node": "^3.5.0",
        "express-rate-limit": "^5.1.1",
        "helmet": "^3.22.0",
        "lodash": "^4.17.15",
        "mongoose": "^5.9.7",
        "rate-limit-mongo": "^2.1.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.1.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "25.1.4",
        "@types/lodash": "^4.14.149",
        "@types/mockingoose": "^2.13.0",
        "@types/mongoose": "^5.7.8",
        "@types/node": "^13.9.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "mockingoose": "^2.13.2",
        "mongodb-memory-server": "^6.5.2",
        "prettier": "^1.19.1",
        "start-server-webpack-plugin": "^2.2.5",
        "supertest": "^4.0.2",
        "ts-jest": "25.2.1",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm run test"
        }
    }
}